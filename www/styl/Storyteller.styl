.story
  position absolute
  top 30px
  left 30px
  width 340px
  color #d
  h2
    line-height 1.5em
    font-weight 300
    font-size 1.8em
  p
    line-height 1.8em
  .content
    position relative
    .container
      position absolute
      top 0px
      left 0px
      transition left 0.4s, opacity 0.4s
      opacity 1
      width 340px
      &.leaving
        opacity 0
        left -400px
      &.entering
        opacity 0
        left 400px

  .pager
    position absolute
    top 281px
    right -30px
    a
      color white
      text-decoration none
      position absolute
      top 0px
      &.prev
        left 0px
      &.next
        left 45px
      .hint
        font-weight 100
        border-bottom 1px solid white
        text-align right
        position absolute
        top -4px
        right 10px

      .arrow
        display block
        border 1px solid white
        text-align center
        line-height 26px
        width 33px
        height 33px
        font-size 33px
        border-radius 50%
        position absolute
        top 0px
        left 0px
        background rgba(255,255,255,0)
        transition background 0.2s
      &:hover .arrow
        background rgba(255,255,255,0.3)
    a
    .hint
      opacity 0
      pointer-events none
      transition opacity 0.4s
    &.display-next a.next
    &.display-prev a.prev
    &.display-hint a.next .hint
        opacity 1
        pointer-events auto

.story-selector
  position absolute
  top 0px
  left 0px
  color white
  list-style-type none
  margin 0px
  padding 0px
  width 100%
  li
     margin 0px
     padding 8px 0px
     float left
     width (100% / 6)
     text-align center
     position relative
     &:nth-child(1)
       border-bottom 1px solid #984ea3
       background darken(#984ea3, 50%)
       &:hover
         background darken(#984ea3, 20%)
     &:nth-child(2)
       border-bottom 1px solid #6d3875
       background darken(#6d3875, 50%)
       &:hover
         background darken(#6d3875, 20%)
     &:nth-child(3)
       border-bottom 1px solid #377eb8
       background darken(#377eb8, 50%)
       &:hover
         background darken(#377eb8, 20%)
     &:nth-child(4)
       border-bottom 1px solid #e41a1c
       background darken(#e41a1c, 50%)
       background linear-gradient(to right, darken(#e41a1c, 50%) 0%, darken(#e41a1c, 50%) 45%, darken(#a65628, 50%) 55%, darken(#a65628, 50%) 100%);
       &:hover
         background darken(#e41a1c, 20%)
       &:after
         content ""
         position absolute
         height 1px
         width 50%
         background #a65628
         bottom -1px
         right 0px
     &:nth-child(5)
       border-bottom 1px solid #999999
       background darken(#999999, 50%)
       &:hover
         background darken(#999999, 20%)
     &:nth-child(6)
       border-bottom 1px solid #c
       background darken(#c, 50%)
       &:hover
         background darken(#c, 20%)


