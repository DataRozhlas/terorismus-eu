.shares
  position absolute
  top 70px
  right 0px
  height 43px
  a
    display block
    float left
    clear both
    width @height
    height @width
    position relative
    transition background 0.2s
    z-index 1
    img
      max-height (@height - 20px)
      max-width (@height - 10px)
      width auto
      height auto
      position absolute
      top 50%
      left 50%
      transform translate(-50%,-50%)
      opacity 1
      transition opacity 0.2s
    &:hover
      img
        transform translate(-50%,-50%) // bug in Chrome?
        opacity 0.9
    &.fb
      background #3F67C0
      &:hover
        background darken(#3F67C0, 20%)
    &.tw
      background #35B5EB
      &:hover
        background darken(#35B5EB, 20%)
    &.cro
      background #ED2D38
      margin-bottom 8px
      &:hover
        background darken(#ED2D38, 20%)
